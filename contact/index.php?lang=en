	function validDate() {
		var year = document.form.year[document.form.year.selectedIndex].value
		var day = document.form.day[document.form.day.selectedIndex].value;
		var monIndex = document.form.mon.selectedIndex;
		var monArray = new Array( 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30 );
		if ( year % 4 == 0 )
			monArray[1]++;			
		if ( day > monArray[monIndex] ) {
			alert("Invalid date. Day is out of range for month/year.");
			document.form.day.selectedIndex = 0;
			document.form.day.focus();
		}
	}
	//--></script>
